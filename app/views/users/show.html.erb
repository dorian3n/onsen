<%= render "/layouts/menubar"%>
  <div class="container">
    <div class="row">
<!-- sidebar  ここまで -->


      <div class="col-sm-8">
        <h2>マイページ</h2>
        <div class="row">
          <div class="col-xs-4">
            <%= attachment_image_tag @user, :image, :fill, 200, 200, :size=>"200x200", fallback: "no_image.jpg" %>
          </div>
          <div class="col-xs-1">
          </div>
          <div class="col-xs-7">
            <h3><%= @user.name %></h3>
	          <p><%= @user.address %>/<%= @user.sex %>/<%= @user.age %></p>
            
            <%# 編集ボタン %>
            <% if @user.id == current_user.id %>
              <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-default pull-right" %></p>
            <% end %>
          </div>



        </div>
      </div>
    </div>
  </div>