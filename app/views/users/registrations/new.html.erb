<%# ユーザ登録画面 %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="form-user">
        <div class="form-header text-center">
          <h3 class="form-header-title">新規登録</h3>
        </div>

        <div class="form-body clearfix">
          <div class="col-md-2">
          </div>
          <div class="col-md-8">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group clearfix">
                <div class="item-form"><%= f.label :ユーザー名 %>
                  <em>※必須項目</em>
                </div>
                  <%= f.text_field :name, :size=>"35", autofocus: true, class:"col-md-12 col-xs-12",style:"padding:0;", placeholder:"(２〜１２文字)" %>
              </div>

              <div class="form-group clearfix">
                <div class="item-form"><%= f.label :メールアドレス %>
                  <em>※必須項目</em>
                </div>
                <%= f.email_field :email, :size=>"35", autofocus: true, class:"col-md-12 col-xs-12",style:"padding:0;", placeholder:"(〇〇@〇〇.〇〇の形式で入力)" %>
              </div>

              <div class="form-group clearfix">
                <div class="item-form"><%= f.label :パスワード %>
                  <em>※必須項目</em>
                </div>
                <%= f.password_field :password, :size=>"35", placeholder:"半角英数６〜１２文字", class:"col-md-12 col-xs-12",style:"padding:0;" %>
              </div>

              <div class="form-group clearfix">
                <div class="item-form"><%= f.label :パスワード確認 %>
                  <em>※必須項目</em>
                </div>
                <%= f.password_field :password_confirmation, :size=>"35", placeholder:"半角英数６〜１２文字", class:"col-md-12 col-xs-12 text-box",style:"padding:0;" %>
              </div>

              <div class="form-group text-center">
                <%= f.submit "新規登録", class:"btn btn-primary" %>
              </div>
            <% end %>
          </div>
          <div class="col-md-2">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



           
