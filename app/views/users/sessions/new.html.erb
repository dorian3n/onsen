<%# ログイン画面 %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-user style-1 rounded has-shadow-1">
        <div class="form-header text-center">
          <h3 class="form-header-title">ログイン</h3>
        </div>

        <div class="form-body clearfix">
          <div class="col-md-8 col-md-offset-2">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group clearfix">
                <%= f.label :メールアドレス%><br>
                <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class:"col-md-12 col-xs-12",style:"padding:0;" %>
              </div>

              
              <div class="form-group clearfix">
                <%= f.label :パスワード%><br>
                <%= f.password_field :password, autocomplete: "パスワード", class:"col-md-12 col-xs-12",style:"padding:0;" %>
              </div>

              <div class="form-group text-center">
                <%= f.submit "ログイン", class:"btn btn-primary" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
