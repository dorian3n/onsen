<%# ログイン画面 %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-user style-1 rounded has-shadow-1">
        <div class="form-header text-center">
          <h3 class="form-header-title">ログイン</h3>
        </div>

        <div class="form-body clearfix">
          <div class="col-md-8 col-md-offset-2">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group clearfix">
                <%= f.label :メールアドレス%><br>
                <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class:"col-md-12" %>
              </div>

              
              <div class="form-group clearfix">
                <%= f.label :パスワード%><br>
                <%= f.password_field :password, autocomplete: "パスワード", class:"col-md-12" %>
              </div>
              

              <% if devise_mapping.rememberable? %>
                <div class="check">
                  <%= f.check_box :remember_me %>
                  <%= f.label :次回より入力を省略 %>
                </div>
              <% end %>

              <div class="form-group text-center">
                <%= f.submit "ログイン", class:"btn btn-primary" %>
              </div>
            <% end %>

            <div class="link">
              <%= link_to "新規登録", new_user_registration_path, class: "forgot-pass" %>
            </div>
            <div class="link">
              <%= link_to "パスワードを忘れた", new_user_password_path, class: "forgot-pass" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
