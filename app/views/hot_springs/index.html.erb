<div class="container">
  <div class="row">
    <%# 背景画像表示 %>
    <div class="main-image">
    </div>

    <%# メニューバー %>
    <%= render "/layouts/menubar"%>

    <h2 style="margin-left:50px;">新着温泉投稿一覧</h2>

    <!--温泉投稿-->
    <% @hot_springs.each do |h| %>
      <div class="hot-spring-box  clearfix">
        <div class="well well-lg col-xs-12 col-md-12">
          <div class="col-xs-12 col-md-12">
            <%# 投稿日 %>
            <h4 style="font-weight:bold;color:darkgreen;">投稿日：<%= h.created_at.strftime("%Y年%-m月%-d日") %></h4>

            <%# 評価 %>
            <p>総合評価<%= h.rate %></p>
          </div>
          <!--温泉写真-->
          <div class="col-xs-12 col-md-6">
            <div class="image-box">
              <%= link_to hot_spring_path(h.id) do %>
                <%= attachment_image_tag h, :image, :fill, 440, 200, :size=>"440x200" %>
              <% end %>
            </div>
          </div>
          <div class="col-md-1">
          </div>
          <div class="col-xs-12 col-md-5">
            <!--温泉名-->
            <%= link_to hot_spring_path(h.id) do %>
              <h2><%= h.name %></h2>
            <% end %>
            <%# 都道府県名 %>
            <p><%= h.prefecture.name %></p>
            <%# 所在地 %>
            <p>所在地：<%= h.address %></p>
            <%# 営業時間 %>
            <p>営業時間：<%= h.start_time %>〜<%= h.ending_time %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>