<div class="container">
  <div class="row">
    <%# 背景画像表示 %>
    <div class="main-image">
    </div>

    <%# メニューバー %>
    <%= render "/layouts/menubar"%>

    <h2 style="margin-left:50px;">新着温泉投稿一覧</h2>

    <!--温泉投稿-->
    <% @hot_springs.each do |h| %>
      <div class="col-xs-12 col-sm-6">
        <div class="hot-spring-box">
          <div class="col-xs-12">
            <div class="row">
              <div class="col-xs-12 col-sm-12">
                <%# 評価 %>
                <p>総合評価４</p>
              </div>
              <!--温泉写真-->
              <div class="col-xs-4 col-sm-4">
                <div class="image-box">
                  <%= attachment_image_tag results, :image, :fill, 200, 200, fallback: "no_image.jpg", :size=>"200x200" %>
                </div>
              </div>
              <div class="col-xs-8 col-sm-8">
                <!--温泉名-->
                <p><%= h.name %></p>
                <%# 都道府県名 %>
                <p><%= h.prefecture_id %></p>
                <%# 所在地 %>
                <p><%= h.address %></p>
                <%# 営業時間 %>
                <p><%= h.start_time %>〜<%= h.ending_time %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>