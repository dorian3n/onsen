<%= render "/layouts/menubar"%>
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 post_image_box">
        <h3>温泉投稿フォーム</h3>
        <div class="box">
          
          <%= form_for(@hot_spring, url:hot_springs_path) do |f| %>
 
            <% if @hot_spring.errors.any? %>
                <%= @hot_spring.errors.count %>件のエラーが発生しました
                <% @hot_spring.errors.full_messages.each do |message| %>
                    <%= message %>
                <% end %>
            <% end %>
            <div class="row">
              <div class="col-sm-3">
                <%= f.attachment_field :image %>
              </div>
            </div>
            <%# 温泉名 %>
            <div class="row">
              <div class="col-sm-3">
                <p>温泉名</p>
              </div>
              <div class="col-sm-4">
                <%= f.text_field :name %>
              </div>
            </div>
            <%# 住所 %>
            <div class="row">
              <div class="col-sm-3">
                <p>住所</p>
              </div>
              <div class="col-sm-9">
                <%= f.text_field :address, class:"col-sm-12", style:"padding:0;" %>
              </div>
            </div>
            <%# 都道府県 %>
            <div class="row">
              <div class="col-sm-3">
                <p>都道府県</p>
              </div>
              <div class="col-sm-4">
                <div class="field">
                  <%= f.label :都道府県 %><br>
                  <%= f.select :prefecture_id, Prefecture.prefectures.keys, {prompt: '選択してください'} %>
                </div>
              </div>
            </div>
            <%# 値段 %>
            <div class="row">
              <div class="col-sm-3">
                <p>値段</p>
              </div>
              <div class="col-sm-1">
                <p>大人</p>
              </div>
              <div class="col-sm-2">
                <%= f.text_field :adult_price %>
              </div>
              <div class="col-sm-1">
                <p>子供</p>
              </div>
              <div class="col-sm-2">
                <%= f.text_field :child_price %>
              </div>
            </div>
            <%# 営業時間 %>
            <div class="row">
              <div class="col-sm-3 col-xs-4">
                <p>営業時間</p>
              </div>
              <div class="col-sm-1 col-xs-1">
                <p>開始</p>
              </div>
              <div class="col-sm-2 col-xs-2">
                <%= f.text_field :start_time %>
              </div>
              <div class="col-sm-1 col-xs-1">
                <p>終了</p>
              </div>
              <div class="col-sm-2 col-xs-2">
                <%= f.text_field :ending_time %>
              </div>
            </div>
            <%# 温泉種類 %>
            <div class="row">
              <div class="col-sm-3 col-xs-3">
                <p>温泉の種類</p>
              </div>
              <div class="col-sm-3 col-xs-3">
                <label><%= f.radio_button :type, "人工温泉" %> 人工温泉 </label>
                <label><%= f.radio_button :type, "天然温泉" %> 天然温泉</label><br>
              </div>
            </div>
            <%# 評価 %>
            <div class="row">
              <div class="col-sm-3 col-xs-3">
                <p>温泉評価</p>
              </div>
              <div class="col-sm-3 col-xs-3">
                <%= f.text_field :rate %>
              </div>
            </div>
            <%# 備考 %>
            <div class="row">
              <div class="col-sm-3 col-xs-3">
                <p>備考</p>
              </div>
              <div class="col-sm-12 col-xs-12">
                <%= f.text_area :remarks, class:"col-sm-12", style:"padding:0;" %>
              </div>
            </div>
            <%# レビュー %>
            <div class="row">
              <div class="col-sm-3 col-xs-3">
                <p>レビュー</p>
              </div>
              <div class="col-sm-12 col-xs-12">
                <%= f.text_area :review, class:"col-sm-12", style:"padding:0;" %>
              </div>
            </div>

           






            
          <div class="text-center">
            <%= f.submit "投稿する", class:"btn btn-primary btn-lg" %>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
